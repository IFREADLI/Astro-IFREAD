---
// import '../styles/global.css';
import { SITE } from '../utils/config';
import Header from './Header.astro';
import Footer from './Footer.astro';
import SEO from '../components/seo/SEO.astro';
import PerformanceMonitor from '../components/performance/PerformanceMonitor.astro';
import { getCollection } from 'astro:content';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  url?: string;
  type?: string;
  keywords?: string[];
  author?: string;
  publishedTime?: string;
  modifiedTime?: string;
  articleSection?: string;
  tags?: string[];
  noIndex?: boolean;
  structuredData?: Record<string, any>;
}

const {
  title = SITE.title,
  description = SITE.description,
  image = SITE.image,
  url = SITE.url,
  type = 'website',
  keywords,
  author,
  publishedTime,
  modifiedTime,
  articleSection,
  tags,
  noIndex = false,
  structuredData
} = Astro.props;

// 获取站点配置
let site = SITE;
try {
  const configs = await getCollection('config', ({ id }) => id === 'site');
  if (configs && configs.length > 0 && configs[0].data && configs[0].data.site) {
    site = configs[0].data.site;
  }
} catch (error) {
  console.warn('Failed to load site config, using default site settings');
}

// 构建完整URL
const canonicalUrl = new URL(Astro.url.pathname, Astro.site);

// 获取文章数量（用于SEO）
const posts = await getCollection('blog');
const postCount = posts.filter(post => !post.data.draft).length;
---

<!DOCTYPE html>
<html lang="zh-CN" data-theme="system">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO组件 -->
    <SEO 
      title={title}
      description={description}
      image={image}
      url={canonicalUrl}
      type={type}
      keywords={keywords}
      author={author || site.author}
      publishedTime={publishedTime}
      modifiedTime={modifiedTime}
      articleSection={articleSection}
      tags={tags}
      noIndex={noIndex}
      structuredData={structuredData}
    />
    
    <!-- RSS -->
    <link rel="alternate" type="application/rss+xml" title={`${site.title} RSS Feed`} href="/rss.xml" />
    
    <!-- 预连接 -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    
    <!-- 字体 -->
    <link rel="preload" href="/fonts/inter-var.woff2" as="font" type="font/woff2" crossorigin />
    
    <!-- 主题初始化脚本 -->
    <script is:inline>
      // 主题系统初始化
      (function() {
        // 获取保存的主题设置，默认为系统主题
        const savedTheme = localStorage.getItem('theme') || 'system';
        
        // 应用主题
        function applyTheme(theme) {
          document.documentElement.setAttribute('data-theme', theme);
          
          // 触发自定义事件，通知主题已更改
          window.dispatchEvent(new CustomEvent('themechange', {
            detail: { theme }
          }));
        }
        
        // 初始化主题
        applyTheme(savedTheme);
        
        // 如果是系统主题，监听系统主题变化
        if (savedTheme === 'system') {
          const mediaQuery = window.matchMedia('(prefers-color-scheme: dark)');
          
          // 监听系统主题变化
          mediaQuery.addEventListener('change', () => {
            applyTheme('system');
          });
        }
        
        // 提供全局主题切换函数
        window.setTheme = function(theme) {
          localStorage.setItem('theme', theme);
          applyTheme(theme);
        };
        
        // 提供全局获取当前主题函数
        window.getCurrentTheme = function() {
          const savedTheme = localStorage.getItem('theme') || 'system';
          
          if (savedTheme === 'system') {
            return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
          }
          
          return savedTheme;
        };
      })();
    </script>
  </head>
  
  <body class="min-h-screen flex flex-col transition-theme">
    <Header />
    
    <main class="flex-grow">
      <slot />
    </main>
    
    <Footer />
    <!-- Google Analytics -->
    {SITE.analytics.googleAnalyticsId && (
      <script async src={`https://www.googletagmanager.com/gtag/js?id=${SITE.analytics.googleAnalyticsId}`}></script>
    )}
    {SITE.analytics.googleAnalyticsId && (
      <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', '{SITE.analytics.googleAnalyticsId}');
      </script>
    )}
    
    <!-- Plausible Analytics -->
    {SITE.analytics.plausibleDomain && (
      <script defer data-domain={SITE.analytics.plausibleDomain} src="https://plausible.io/js/plausible.js"></script>
    )}
    
    <!-- Service Worker 注册脚本 -->
    <script is:inline src="/scripts/sw-register.js"></script>
    
    <!-- 性能监控组件 -->
    <PerformanceMonitor />
  </body>
</html>
