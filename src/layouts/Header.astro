---
import { SITE, NAVIGATION } from '../utils/config';
import SearchButton from '../components/ui/SearchButton.astro';
import ThemeToggle from '../components/ui/ThemeToggle.astro';
---

<header class="sticky top-0 z-50 w-full border-b border-theme bg-primary/80 backdrop-blur-md transition-theme">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo和标题 -->
      <div class="flex items-center">
        <a href="/" class="flex items-center space-x-2">
          <img 
            src="/logo.svg" 
            alt={SITE.title} 
            class="h-8 w-8" 
            width="32" 
            height="32"
          />
          <span class="text-xl font-bold text-primary">
            {SITE.title}
          </span>
        </a>
      </div>

      <!-- 桌面导航 -->
      <nav class="hidden md:flex items-center space-x-1">
        {NAVIGATION.map((item) => (
          <a
            href={item.href}
            class={`nav-link ${
              Astro.url.pathname === item.href ? 'nav-link-active' : ''
            }`}
          >
            {item.name}
          </a>
        ))}
      </nav>

      <!-- 右侧操作区 -->
      <div class="flex items-center space-x-2">
        <SearchButton />
        <ThemeToggle />
        
        <!-- 移动端菜单按钮 -->
        <button
          id="mobile-menu-button"
          class="md:hidden p-2 rounded-md text-secondary hover:text-primary hover:bg-secondary focus:outline-none focus:ring-2 focus:ring-inset focus-ring"
          aria-controls="mobile-menu"
          aria-expanded="false"
        >
          <span class="sr-only">打开主菜单</span>
          <!-- 菜单图标 -->
          <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <!-- 关闭图标 -->
          <svg class="hidden h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- 移动端菜单 -->
  <div id="mobile-menu" class="hidden md:hidden">
    <div class="px-2 pt-2 pb-3 space-y-1 bg-primary border-t border-theme">
      {NAVIGATION.map((item) => (
        <a
          href={item.href}
          class={`block px-3 py-2 rounded-md text-base font-medium transition-theme ${
            Astro.url.pathname === item.href
              ? 'text-accent bg-accent/10'
              : 'text-secondary hover:text-primary hover:bg-secondary'
          }`}
        >
          {item.name}
        </a>
      ))}
    </div>
  </div>
</header>

<script>
  // 移动端菜单切换
  document.addEventListener('DOMContentLoaded', () => {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    const menuIcons = mobileMenuButton.querySelectorAll('svg');
    
    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', () => {
        const expanded = mobileMenuButton.getAttribute('aria-expanded') === 'true';
        
        // 切换菜单显示状态
        if (expanded) {
          mobileMenu.classList.add('hidden');
          menuIcons[0].classList.remove('hidden');
          menuIcons[1].classList.add('hidden');
          mobileMenuButton.setAttribute('aria-expanded', 'false');
        } else {
          mobileMenu.classList.remove('hidden');
          menuIcons[0].classList.add('hidden');
          menuIcons[1].classList.remove('hidden');
          mobileMenuButton.setAttribute('aria-expanded', 'true');
        }
      });
    }
  });
</script>