---
import { SITE, FOOTER_LINKS } from '../utils/config';
---

<footer class="bg-white dark:bg-gray-900 border-t border-gray-200 dark:border-gray-800">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- 站点信息 -->
      <div class="col-span-1 md:col-span-1">
        <div class="flex items-center space-x-2 mb-4">
          <img 
            src="/logo.svg" 
            alt={SITE.title} 
            class="h-8 w-8" 
            width="32" 
            height="32"
          />
          <span class="text-xl font-bold text-gray-900 dark:text-white">
            {SITE.title}
          </span>
        </div>
        <p class="text-gray-600 dark:text-gray-400 mb-4">
          {SITE.description}
        </p>
        <div class="flex space-x-4">
          {SITE.social.map((item) => (
            <a
              href={item.url}
              class="text-gray-400 hover:text-gray-500 dark:hover:text-gray-300 transition-colors"
              aria-label={item.name}
            >
              <span class="sr-only">{item.name}</span>
              <!-- 图标占位符，实际项目中可以使用图标库 -->
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
            </a>
          ))}
        </div>
      </div>

      <!-- 链接列 -->
      {FOOTER_LINKS.map((column) => (
        <div class="col-span-1">
          <h3 class="text-sm font-semibold text-gray-900 dark:text-white tracking-wider uppercase mb-4">
            {column.title}
          </h3>
          <ul class="space-y-2">
            {column.links.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
                >
                  {link.name}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <!-- 版权信息 -->
    <div class="mt-8 pt-8 border-t border-gray-200 dark:border-gray-800">
      <p class="text-center text-gray-500 dark:text-gray-400 text-sm">
        &copy; {new Date().getFullYear()} {SITE.title}. 保留所有权利。
      </p>
    </div>
  </div>
</footer>