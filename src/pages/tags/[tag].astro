---
import Layout from '../../layouts/Layout.astro';
import Header from '../../layouts/Header.astro';
import Footer from '../../layouts/Footer.astro';
import { getCollection } from 'astro:content';
import PostCard from '../../components/blog/PostCard.astro';
import type { CollectionEntry } from 'astro:content';

// 获取标签名称
const { tag } = Astro.params;
const tagName = decodeURIComponent(tag);

// 获取所有文章
const allPosts = await getCollection('blog', ({ data }) => {
  return !data.draft;
});

// 获取包含该标签的文章
const posts = allPosts.filter(post => 
  post.data.tags && post.data.tags.includes(tagName)
);

// 按日期排序
const sortedPosts = posts.sort((a, b) => 
  new Date(b.data.publishDate).valueOf() - new Date(a.data.publishDate).valueOf()
);

// 获取相关标签（与当前标签一起出现最多的标签）
function getRelatedTags(currentTag: string, posts: CollectionEntry<'blog'>[], limit = 8) {
  const tagCounts: Record<string, number> = {};
  
  posts.forEach(post => {
    if (post.data.tags && post.data.tags.includes(currentTag)) {
      post.data.tags.forEach(tag => {
        if (tag !== currentTag) {
          tagCounts[tag] = (tagCounts[tag] || 0) + 1;
        }
      });
    }
  });
  
  return Object.entries(tagCounts)
    .sort((a, b) => b[1] - a[1])
    .slice(0, limit)
    .map(([name, count]) => ({ name, count }));
}

const relatedTags = getRelatedTags(tagName, allPosts);

// 生成标签颜色（基于标签名称的哈希值）
function getTagColor(tagName: string) {
  let hash = 0;
  for (let i = 0; i < tagName.length; i++) {
    hash = tagName.charCodeAt(i) + ((hash << 5) - hash);
  }
  
  const colors = [
    '#ef4444', '#f97316', '#f59e0b', '#eab308', '#84cc16',
    '#22c55e', '#10b981', '#14b8a6', '#06b6d4', '#0ea5e9',
    '#3b82f6', '#6366f1', '#8b5cf6', '#a855f7', '#d946ef',
    '#ec4899', '#f43f5e'
  ];
  
  return colors[Math.abs(hash) % colors.length];
}
---

<Layout title={`${tagName} - 标签 - 极简博客`}>
  <Header />
  
  <main class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- 标签头部信息 -->
    <header class="mb-10">
      <div class="flex items-center mb-4">
        <div 
          class="w-12 h-12 rounded-full flex items-center justify-center text-white mr-4"
          style={`background-color: ${getTagColor(tagName)}`}
        >
          <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
          </svg>
        </div>
        <div>
          <h1 class="text-3xl font-bold text-gray-900 dark:text-white">
            {tagName}
          </h1>
          <p class="text-gray-600 dark:text-gray-300 mt-1">
            {sortedPosts.length} 篇文章
          </p>
        </div>
      </div>
    </header>
    
    <!-- 文章列表 -->
    <section class="mb-12">
      {sortedPosts.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {sortedPosts.map((post) => (
            <PostCard post={post} />
          ))}
        </div>
      ) : (
        <div class="text-center py-12 bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700">
          <svg class="w-16 h-16 mx-auto text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
          <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">暂无文章</h3>
          <p class="text-gray-600 dark:text-gray-400">该标签下还没有发布任何文章</p>
        </div>
      )}
    </section>
    
    <!-- 相关标签 -->
    {relatedTags.length > 0 && (
      <section class="mb-12">
        <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">相关标签</h2>
        <div class="flex flex-wrap gap-2">
          {relatedTags.map((relatedTag) => (
            <a
              href={`/tags/${encodeURIComponent(relatedTag.name)}/`}
              class="group inline-flex items-center px-3 py-1.5 rounded-full text-sm font-medium text-white transition-all duration-200 hover:scale-105 hover:shadow-lg"
              style={`background-color: ${getTagColor(relatedTag.name)}`}
            >
              <span>{relatedTag.name}</span>
              <span class="ml-1.5 bg-white/20 px-1.5 py-0.5 rounded-full text-xs">
                {relatedTag.count}
              </span>
            </a>
          ))}
        </div>
      </section>
    )}
    
    <!-- 返回按钮 -->
    <div class="text-center">
      <a 
        href="/tags/"
        class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 rounded-md hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors"
      >
        <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        返回标签列表
      </a>
    </div>
  </main>
  
  <Footer />
</Layout>