---
interface Props {
  code: string;
  language?: string;
  title?: string;
  showLineNumbers?: boolean;
  highlightLines?: string;
  copyable?: boolean;
  collapsible?: boolean;
}

const { 
  code, 
  language = '', 
  title,
  showLineNumbers = true,
  highlightLines = '',
  copyable = true,
  collapsible = false
} = Astro.props;

// 生成唯一ID
const codeId = `code-${Math.random().toString(36).substr(2, 9)}`;
---

<div class="code-block-container" data-code-id={codeId}>
  {title && (
    <div class="code-block-header">
      <div class="code-block-title">{title}</div>
      {copyable && (
        <button 
          class="code-block-copy-btn"
          data-clipboard-text={code}
          aria-label="复制代码"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
          </svg>
          <span class="copy-text">复制</span>
        </button>
      )}
    </div>
  )}
  
  <div class="code-block-wrapper">
    <pre 
      class="code-block {showLineNumbers ? 'line-numbers' : ''} {highlightLines ? `highlight-lines` : ''}"
      data-language={language}
      data-highlight-lines={highlightLines}
    ><code>{code}</code></pre>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // 复制代码功能
    const copyButtons = document.querySelectorAll('.code-block-copy-btn');
    
    copyButtons.forEach(button => {
      button.addEventListener('click', async () => {
        const text = button.getAttribute('data-clipboard-text');
        
        try {
          await navigator.clipboard.writeText(text || '');
          
          // 更新按钮状态
          const copyText = button.querySelector('.copy-text');
          if (copyText) {
            copyText.textContent = '已复制';
            button.classList.add('copied');
            
            // 2秒后恢复原状态
            setTimeout(() => {
              copyText.textContent = '复制';
              button.classList.remove('copied');
            }, 2000);
          }
        } catch (error) {
          console.error('复制失败:', error);
        }
      });
    });
    
    // 高亮指定行
    const codeBlocks = document.querySelectorAll('.code-block[data-highlight-lines]');
    
    codeBlocks.forEach(block => {
      const highlightLines = block.getAttribute('data-highlight-lines');
      if (!highlightLines) return;
      
      const lines = block.querySelectorAll('code > span');
      const lineNumbers = highlightLines.split(',').map(n => parseInt(n.trim()));
      
      lineNumbers.forEach(lineNum => {
        if (lineNum > 0 && lineNum <= lines.length) {
          lines[lineNum - 1].classList.add('highlighted-line');
        }
      });
    });
  });
</script>

<style>
  .code-block-container {
    margin: 1.5rem 0;
    border-radius: 0.5rem;
    overflow: hidden;
    background-color: var(--code-bg);
    border: 1px solid var(--border);
  }
  
  .code-block-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem 1rem;
    background-color: var(--code-header-bg, rgba(0, 0, 0, 0.05));
    border-bottom: 1px solid var(--border);
  }
  
  .code-block-title {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--text-secondary);
  }
  
  .code-block-copy-btn {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    padding: 0.25rem 0.5rem;
    font-size: 0.75rem;
    color: var(--text-secondary);
    background-color: transparent;
    border: 1px solid var(--border);
    border-radius: 0.25rem;
    cursor: pointer;
    transition: all 0.2s ease;
  }
  
  .code-block-copy-btn:hover {
    color: var(--text-primary);
    background-color: var(--bg-secondary);
  }
  
  .code-block-copy-btn.copied {
    color: var(--accent);
    border-color: var(--accent);
  }
  
  .code-block-wrapper {
    overflow-x: auto;
  }
  
  .code-block {
    padding: 1rem;
    margin: 0;
    font-family: var(--font-mono);
    font-size: 0.875rem;
    line-height: 1.5;
    color: var(--code-text);
    background-color: var(--code-bg);
    overflow-x: auto;
    tab-size: 2;
  }
  
  .code-block code {
    display: block;
    padding: 0;
    background-color: transparent;
    color: inherit;
  }
  
  /* 行号样式 */
  .code-block.line-numbers {
    padding-left: 3.5rem;
  }
  
  .code-block.line-numbers::before {
    content: attr(data-line-numbers);
    position: absolute;
    left: 0;
    width: 3rem;
    padding-right: 0.5rem;
    text-align: right;
    color: var(--text-tertiary);
    background-color: var(--code-bg);
    border-right: 1px solid var(--border);
    user-select: none;
    counter-reset: line;
  }
  
  /* 高亮行样式 */
  .highlighted-line {
    background-color: var(--code-highlight-bg, rgba(255, 255, 0, 0.1));
    display: block;
    margin: 0 -1rem;
    padding: 0 1rem;
    border-left: 3px solid var(--accent);
  }
  
  /* 响应式调整 */
  @media (max-width: 768px) {
    .code-block-container {
      margin: 1rem 0;
    }
    
    .code-block {
      font-size: 0.75rem;
    }
    
    .code-block-header {
      padding: 0.5rem 0.75rem;
    }
    
    .code-block {
      padding: 0.75rem;
    }
  }
</style>